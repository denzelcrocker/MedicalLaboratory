<Page x:Class="Medical_laboratory.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Medical_laboratory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MainPage">

    <Grid>
        <TextBlock 
               x:Name="userInfo"   
               FontSize="40"
               Height="60"
               HorizontalAlignment="Left"
               Foreground="#003d34" 
               FontWeight="Normal" 
               FontStyle="Normal" 
               FontFamily="Bahnschrift"
               Margin="10,40,0,970"/>
        <Image 
            HorizontalAlignment="Left"
            Height="80"
            Margin="1780,24,0,0"
            VerticalAlignment="Top"
            Width="100"
            Source="/Images/log-out.png" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
        <Button Height="6in" Width="6in"  Style="{DynamicResource ButtonStyle1}" Margin="244,252,1136,252">
            <Button.Content>
                <StackPanel>
                    <Image 
                        Source="/Images/services.png"
                        Width="3.6in"/>
                    <Label
                        Content="Услуги" 
                        FontFamily="Bahnschrift"
                        FontSize="80" 
                        Foreground="White"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Button.Content>
        </Button>
        <Button Height="6in" Width="6in"  Style="{DynamicResource ButtonStyle1}" Margin="1100,252,244,252">
            <Button.Content>
                <StackPanel>
                    <Image 
                        Source="/Images/results.png"
                        Width="3.6in"/>
                    <Label
                        Content="Протоколы" 
                        FontFamily="Bahnschrift"
                        FontSize="80" 
                        Foreground="White"
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</Page>
